import mysql.connector

# Replace these with your MySQL connection details
config = {
    'user': 'your_username',
    'password': 'your_password',
    'host': 'your_host',  # Usually 'localhost' if it's on your machine
    'database': 'QuickBiteDelights',
}

# Establish a connection to MySQL
conn = mysql.connector.connect(**config)

# Create a cursor object to interact with the database
cursor = conn.cursor()

# Define a list of food items as tuples (name, price)
food_items = [
    ('Donut', 2.50),
    ('Pigs in a Blanket', 4.00),
    ('Burrito', 5.50),
    ('Shake', 3.00),
    ('Sandwich', 4.50),
    ('Pancake', 3.25),
]

# Insert each food item into the FoodItems table
for item in food_items:
    name, price = item
    insert_query = "INSERT INTO FoodItems (name, price) VALUES (%s, %s)"
    cursor.execute(insert_query, (name, price))

# Commit the changes to the database
conn.commit()

# Close the cursor and connection
cursor.close()
conn.close()
